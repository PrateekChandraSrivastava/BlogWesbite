<%- include("partials/header.ejs") %>

    <main class="container" style="min-height: 100%;">

        <div class="row g-5">
            <div class="col-md-8">
                <% if (locals.postID>= 0) { %>

                    <h3 class="pb-4 mb-4 fst-italic border-bottom">
                        Edit your Blog
                    </h3>
                    <div class="container">
                        <form class="form-control" action="/update/<%= postID %>" method="POST">

                            <label for="blog-title" id="blog-title"></label>
                            <input type="text" class="form-control mb-1 blogtitle" name="blog-title"
                                value="<%= blogTitle %>" required>
                            <label for="blog-content" id="blog-content"></label>
                            <textarea class="form-control mb-1 blogcontent" style="height: 50vh;" name="blog-content"
                                required><%= blogContent %></textarea>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary">UPDATE</button>
                            </div>
                        </form>
                    </div>
                    <% } else { %>
                        <h3 class="pb-4 mb-4 fst-italic border-bottom">
                            Create your Blog
                        </h3>
                        <div class="container">
                            <form class="form-control" action="/post" method="POST">

                                <label for="blog-title" id="blog-title"></label>
                                <input type="text" class="form-control mb-1 blogtitle" name="blog-title"
                                    placeholder="Blog Title" required>


                                <label for="blog-content" id="blog-content"></label>
                                <textarea class="form-control mb-1 blogcontent" style="height: 50vh;"
                                    name="blog-content" placeholder="Blog Content" required></textarea>
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary">POST</button>
                                </div>
                            </form>
                        </div>
                        <% } %>
            </div>

            <div class="col-md-4">
                <div class="position" style="top: 2rem;">
                    <div class="p-4 mb-3 bg-body-tertiary rounded">
                        <h4 class="fst-italic">About</h4>
                        <p class="mb-0">Customize this section to tell your visitors a little bit about your
                            publication, writers, content, or something else entirely. Totally up to you.</p>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <%- include("partials/footer.ejs") %>